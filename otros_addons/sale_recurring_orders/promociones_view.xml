	<field name="help" type="html">
	
		<p class="oe_view_nocontent_create">
                
                </p>
	</field>
	</record>
	
		

    <menuitem id="menu_promociones" name="Menu de Promocionesa" parent="base.menu_sales" action="promociones_action" sequence="9"/>
	
	
	
	</data>
